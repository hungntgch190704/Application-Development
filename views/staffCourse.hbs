<!DOCTYPE html>
<html lang="en">
{{> head}}
<body class="sb-nav-fixed">
    {{> staffHeader}}
    <div class="container py-5" style="margin-top: 5%; margin-left: 15%">
        <!-- Searching -->
        <div class="form-group">
            <div class="input-group">
                <div class="container">
                    <div class="row">
                        <div class="col" style="margin-left: 2%">
                            <a href="/staff/course/add" class="btn btn-success" style="margin-left: 5%;">
                                <span class="glyphicon glyphicon-plus"></span>
                                <span><strong>Add new Course</strong></span>
                            </a>
                        </div>
                        <div class="col">
                            <form class="form" method="post" action="/doSearchCourse"
                                style="display: flex; margin-right: 9%;">
                                <input type="search" name="keyword" class="form-control rounded"
                                    placeholder="Search Category Course" aria-label="Search" aria-describedby="search-addon" />
                                <hr -3>
                                <button type="button" class="btn btn-success">Search</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="e-panel card" style="width: 90%; margin-left: 5%">
            <div class="card-body">
                <div class="card-title">
                </div>
                <div class="e-table">
                    <div class="table-responsive table-lg mt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="max-width" style="text-align:center">Course Name</th>
                                    <th class="sortable" style="text-align:center">Course Category</th>
                                    <th style="text-align:center">Description</th>
                                    <th style="text-align:center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each _course}}
                                <tr>
                                    <td class="text-nowrap align-middle"><span>{{name}}</span></td>
                                    <td class="text-nowrap align-middle"><span>{{category}}</span></td>
                                    <td class="text-nowrap align-middle"><span>{{description}}</span></td>
                                    <td class="text-center align-middle">
                                        <div class="btn-group align-top">
                                            <a href="/staff/course/edit?id={{_id}}" class="btn btn-success">
                                                <span class="glyphicon glyphicon-edit"></span>
                                                <span><strong>Edit</strong></span>
                                            </a>
                                            <a href="/staff/course/delete?id={{_id}}"
                                                onclick="return confirm('Are you sure?')" class="btn btn-danger">
                                                <span class="glyphicon glyphicon-remove"></span>
                                                <span><strong>Delete</strong></span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>