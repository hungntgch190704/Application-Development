<!DOCTYPE html>
<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
    {{> traineehead}}
        <div class="e-panel card" style="width: 90%; margin-left: 5%">
            <div class="card-body">
                <div class="card-title">
                </div>
                <div class="e-table">
                    <div class="table-responsive table-lg mt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="max-width" style="text-align:center">Name</th>
                                    <th class="max-width" style="text-align:center">Email</th>
                                    <th class="sortable" style="text-align:center">Date of Birth</th>
                                    <th style="text-align:center">Education</th>
                                </tr>
                            </thead>
                                <tbody>
                                {{#each trainees}}
                                <tr>
                                    <td class="text-nowrap align-middle">{{name}}</td>
                                    <td class="text-nowrap align-middle">{{email}}</td>
                                    <td class="text-nowrap align-middle"><span>{{dateFormat dateOfBirth "YYYY-MM-DD"}}</span></td>
                                    <td class="text-nowrap align-middle"><span>{{education}}</span></td>                                   
                                </tr>
                               {{/each}} 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>