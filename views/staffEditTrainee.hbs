<!DOCTYPE html>
<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
    {{> staffHeader}}
    <div class="modal-dialog modal-lg" role="document" style="margin-top: 5%; margin-left: 20%">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Editing Trainee </h2>
            </div>
            <div class="modal-body">
                <div class="py-1">

                    <form class="form" method="POST" action="/doEditTrainee">
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        <input type="hidden" name="id" value="{{aTrainee.id}}">
                                        <div class="form-group">
                                            <label>Full Name</label>
                                            <input class="form-control" type="text" name="name" value="{{aTrainee.name}}">
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input class="form-control" type="text" name="email" value="{{aTrainee.email}}">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Date of Birth</label>
                                            <input class="form-control" type="date" name="date" value="{{aTrainee.dateOfBirth}}">
                                        </div>
                                    </div>
                                    <div class="col mb-3">
                                        <div class="form-group">
                                            <label>Education</label>
                                            <input class="form-control" type="text" name="education"
                                                value="{{aTrainee.education}}">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-end">
                                <button class="btn btn-primary" type="submit">Save</button>
                                <a href="/staff/trainee" class="btn btn-warning">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>