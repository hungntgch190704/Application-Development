<!DOCTYPE html>
<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
    {{> traineehead}}
    <div class="modal-dialog modal-lg" role="document" style="margin-top: 5%; margin-left: 20%">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Change Password for Trainee</h2>
            </div>
            <div class="modal-body">
                <div class="py-1">
                    <form class="form" method="post" action='/trainee/doChangePassword'>
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Old Password</label>
                                            <input class="form-control" type="password" placeholder="••••••" name="old" required/ >
                                            <span class="helper-text text-danger">{{errors.current}}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col mb-3">
                                        <div class="form-group">
                                            <label>New Password</label>
                                            <input class="form-control" type="password" placeholder="••••••" name="new" required/>
                                            <span class="helper-text text-danger">{{errors.length}}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col mb-3">
                                        <div class="form-group">
                                            <label>Confirm Password</label>
                                            <input class="form-control" type="password" placeholder="••••••" name="confirm" required/>
                                            <span class="helper-text text-danger">{{errors.check}}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-end">
                                <button class="btn btn-primary" type="submit">Save</button>
                                <a href="/trainee" class="btn btn-warning">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>