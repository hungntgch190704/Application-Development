<!DOCTYPE html>
<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
    {{> trainerhead}}
    <div class="container py-5" style="margin-top: 3%; margin-left: 15%">
    <div class="e-panel card" style="width: 90%; margin-left: 5%">
      <div class="card-body">
        <div class="card-title">
        </div>
        <div class="e-table">
          <div class="table-responsive table-lg mt-3">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Speciality</th>
                  <th>Age</th>
                  <th>Address</th>
                </tr>
              </thead>
              <tbody>
                <input  type="hidden" name="id" value="{{_aTrainer._id}}">
                <tr>
                  <td class="text-nowrap align-middle">{{_aTrainer.name}}</td>
                  <td class="text-nowrap align-middle">{{_aTrainer.email}}</td>
                  <td class="text-nowrap align-middle"><span>{{_aTrainer.speciality}}</span></td>
                  <td class="text-nowrap align-middle">{{_aTrainer.age}}</td>
                  <td class="text-nowrap align-middle">{{_aTrainer.address}}</td>
                </tr>
              </tbody>
</body>

</html>