<!DOCTYPE html>
<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
    {{> adminHeader}}
    <div class="modal-dialog modal-lg" role="document" style="margin-top: 3%; margin-left: 15%">
        <div class="modal-content py-5" style="padding-left: 12%;">
            <div class="modal-header">
                <h2 class="modal-title">Edit Training Staff: {{aStaff.name}}</h2>
            </div>
            <div class="row">
                <div class="col-md-3 border-right" style="padding-right: 20px;">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle mt-5" width="150px" src="/uploads/staff/{{aStaff.img}}">
                    </div>
                </div>
                <div class="col-md-8 border-right">
                    <form class="form" method="post" action='/admin/adminEditStaff/doEditStaff'
                        enctype="multipart/form-data" id="updateStaff">
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <input type="hidden" name="id" value="{{aStaff._id}}">
                                    <label>Full Name</label>
                                    <input class="form-control" type="text" name="name" placeholder="Full name"
                                        value="{{aStaff.name}}">
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="form-control" type="text" placeholder="user@example.com" name="email"
                                        value="{{aStaff.email}}">
                                    <span class="form-message badge bg-danger">{{errors.email}}</span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label>Age</label>
                                    <input class="form-control" type="number" name="age" placeholder="18" min="18"
                                        value="{{aStaff.age}}">
                                </div>
                            </div>
                            <div class="col mb-3">
                                <div class="col form-group">
                                    <label>Image</label>
                                    <input type="file" name="picture" id="picture" accept="image/*" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col mb-3">
                                    <div class="form-group">
                                        <label>Address</label>
                                        <textarea class="form-control" rows="5" placeholder="Address"
                                            name="address">{{aStaff.address}}</textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col d-flex justify-content-end">
                                    <button class="btn btn-primary" type="submit">Save</button>
                                    <a href="/admin" class="btn btn-warning">Cancel</a>
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/validateStaff.js"></script>
</body>

</html>