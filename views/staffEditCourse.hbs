<!DOCTYPE html>
<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
    {{> staffHeader}}


    <div class="modal-dialog modal-lg" role="document" style="margin-top: 5%; margin-left: 20%">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Editing Course </h2>
            </div>
            <div class="modal-body">
                <div class="py-1">
                    <form class="form" method="post" action="/doEditCourse">
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Course Name</label>
                                            <input type="hidden" name="id" value="{{_course._id}}">
                                            <input class="form-control" type="text" value="{{_course.name}}" name="name">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            <label for="exampleFormControlSelect1">Course Category</label>
                                            <select name="category" class="form-select"
                                                aria-label="Disabled select example">
                                                <option value="1">Marketing</option>
                                                <option value="2">Graphic</option>
                                                <option value="3">IT</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            <label>Description</label>
                                            <textarea name="description" class="form-control" rows="5"
                                               >{{_course.description}}</textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col d-flex justify-content-end">
                                    <button class="btn btn-primary" type="submit">Save</button>
                                    <a href="/staff/trainee" class="btn btn-warning">Cancel</a>
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>