<!DOCTYPE html>
<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
    {{> staffHeader}}
    <div class="container py-5" style="margin-top: 3%; margin-left: 15%">
        <center>
            <div class="form-group">
                <label>Search by Name:</label>
                <div class="input-group">
                    <a href="/staff/trainee/add" class="btn btn-success" style="margin-left: 5%;">
                        <span class="glyphicon glyphicon-plus"></span>
                        <span><strong>Add new Trainee</strong></span>
                    </a>
                    <input type="search" style="margin-left: 20%; width: 40%;  flex: none;" class="form-control rounded"
                        placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                    <hr -3>
                    <button type="button" class="btn btn-success">search</button>
                </div>
            </div>
        </center>
        <div class="e-panel card" style="width: 90%; margin-left: 5%">
            <div class="card-body">
                <div class="card-title">
                </div>
                <div class="e-table">
                    <div class="table-responsive table-lg mt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="max-width" style="text-align:center">Name</th>
                                    <th class="max-width" style="text-align:center">Email</th>
                                    <th class="sortable" style="text-align:center">Date of Birth</th>
                                    <th style="text-align:center">Education</th>
                                    <th style="text-align:center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each trainees}}
                                <tr>

                                    <td class="text-nowrap align-middle">{{name}}</td>
                                    <td class="text-nowrap align-middle">{{email}}</td>
                                    <td class="text-nowrap align-middle"><span>{{dateOfBirth}}</span></td>
                                    <td class="text-nowrap align-middle"><span>{{education}}</span></td>
                                    <td class="text-center align-middle">
                                        <div class="btn-group align-top">
                                            <a href="/staff/trainee/edit?id={{id}}" class="btn btn-success">
                                                <span class="glyphicon glyphicon-edit"></span>
                                                <span><strong>Edit</strong></span>
                                            </a>
                                            <a href="/staff/trainee/delete?id={{id}}"
                                                onclick="return confirm('Are you sure')" class="btn btn-danger">
                                                <span class="glyphicon glyphicon-remove"></span>
                                                <span><strong>Delete</strong></span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                               {{/each}} 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>