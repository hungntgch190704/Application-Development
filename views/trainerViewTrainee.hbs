<!DOCTYPE html>
<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
    {{> trainerhead}}
    <div class="container py-5" style="margin-top: 3%; margin-left: 15%">
        <center>
            <div class="form-group">
                <label>Search by Name:</label>
                <div class="input-group">
                    <form class="form btn-group align-top" method="post" action="/trainer/searchTrainee" style="margin-left: 20%; width: 40%;  flex: none;">
                        <input type="search" name="keyword" class="form-control rounded" 
                            placeholder="Search Category Course" aria-label="Search" aria-describedby="search-addon" />
                        <button type="submit" class="btn btn-success">Search</button>
                    </form>
                </div>
            </div>
        </center>
        <div class="e-panel card" style="width: 90%; margin-left: 5%">
            <div class="card-body">
                <div class="card-title">
                    <h2 style="text-align: center"><b><i>Viewing All Trainee</i></b></h2>
                </div>
                <div class="e-table">
                    <div class="table-responsive table-lg mt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="max-width" style="text-align:center">Name</th>
                                    <th style="text-align:center">Image</th>
                                    <th class="max-width" style="text-align:center">Email</th>
                                    <th class="sortable" style="text-align:center">Date of Birth</th>
                                    <th style="text-align:center">Education</th>       
                                </tr>
                            </thead>
                                <tbody>
                                {{#each trainees}}
                                <tr>

                                    <td class="text-nowrap align-middle">{{name}}</td>
                                    <td class="text-nowrap align-middle">
                                        <center>
                                            <img src="/uploads/trainees/{{img}}" alt="{{name}}" width="50px" height="70px">
                                        </center>
                                    </td>
                                    <td class="text-nowrap align-middle">{{email}}</td>
                                    <td class="text-nowrap align-middle"><span>{{dateFormat dateOfBirth "YYYY-MM-DD"}}</span></td>
                                    <td class="text-nowrap align-middle"><span>{{education}}</span></td>  
                                </tr>
                               {{/each}} 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>