<!DOCTYPE html>
<html lang="en">

<body class="sb-nav-fixed">
    {{> head}}
    {{> trainerhead}}

    <div class="container py-5" style="margin-top: 5%; margin-left: 15%">
        <!-- Searching -->
             <center>
            <div class="form-group">
                <label>Search by Name:</label>
                <div class="input-group">
                    <form class="form btn-group align-top" method="post" action="/trainer/SearchCourse" style="margin-left: 20%; width: 40%;  flex: none;">
                        <input type="search" name="keyword" class="form-control rounded" 
                            placeholder="Search Course" aria-label="Search" aria-describedby="search-addon" />
                        <button type="submit" class="btn btn-success">Search</button>
                    </form>
                </div>
            </div>
        </center>

        <div class="e-panel card" style="width: 90%; margin-left: 5%">
            <div class="card-body">
                <div class="card-title">
                </div>
                <div class="e-table">
                    <div class="table-responsive table-lg mt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="max-width" style="text-align:center">Course Name</th>
                                    <th class="sortable" style="text-align:center">Course Category</th>
                                    <th style="text-align:center">Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each courses}}
                                <tr>
                                    <td class="text-nowrap align-middle">{{name}}</td>
                                    <td class="text-nowrap align-middle"><span>{{category}}</span></td>
                                    <td class="text-nowrap align-middle"><span>{{description}}</span></td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>